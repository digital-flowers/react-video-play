$controls-height = 25px
$track-height = 8px

@import "./ui-input-range.styl"

.ui-video-player-component
	box-shadow 1px 1px 25px rgba(255, 0, 0, 0.08)
	position relative
	overflow: hidden


	.ui-video-player-controls
		transition bottom .7s ease
		background-color rgba(0, 0, 0, 0.7)
		position absolute
		width 100%
		height $controls-height
		bottom 0px
		left 0
		box-sizing border-box
		padding 0 15px 0 0px


		&.hide
			bottom - $controls-height + 4px

		.play-pause-block
			width 30px
			float left
			display inline-block
			cursor pointer
			position relative
			height 100%
			text-align center

			&:before
				transition background-image .3s ease
				content: '';
				width: 100%;
				height: 100%;
				position: absolute;
				background-size: 24px;
				background-repeat: no-repeat;
				background-position center
				left 0
				top 0
				background-image: url(/img/play.svg);

			&.played
				&:before
					background-image: url(/img/pause.svg);

		.seek-block
			width calc(80% - 30px)
			float left
			display inline-block
			box-sizing border-box
			position: relative;

			.seek-block-buffer
				transition width .5s ease
				position absolute
				height $track-height
				background-color #fff
				left 0px
				top ($controls-height / 2) - ($track-height / 2)
				width 0px
				pointer-events none

		.sound-icon
			width 30px
			height 100%
			float left
			display inline-block
			position relative
			cursor pointer

			&:before
				transition background-image .3s ease
				content: '';
				width: 100%;
				height: 100%;
				left 0
				top 0
				position: absolute;
				background-size: 15px;
				background-repeat: no-repeat;
				background-position center
				background-image: url(/img/sound.svg);

			&.mute
				&:before
					background-image: url(/img/mute.svg);
					background-position-x: 8px;

		.sound-range
			width calc(20% - 30px)

		.fullscreen-block
			width 30px


